{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tiles List</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Map Id</th>
            <th>Column and Row</th>
            <th>Sector Name</th>
            <th>Playable</th>
            <th>Tile JSON</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for tile in tiles %}
            <tr>
                <td class="UYBGListBorder UYBGFont_075em" nowrap>{{ tile.id }}</td>
                <td class="UYBGListBorder UYBGFont_075em" nowrap><a
                            href="{{ path('crud_tiles_show', { 'id': tile.id }) }}">{{ tile.mapId }}</a></td>
                <td class="UYBGListBorder UYBGFont_075em" nowrap>{{ tile.tileColRow }}</td>
                <td class="UYBGListBorder UYBGFont_075em" nowrap>{{ tile.tileSectorName }}</td>
                <td class="UYBGListBorder UYBGFont_075em"
                    nowrap>{% if tile.tilePlayable %}Yes{% else %}No{% endif %}</td>
                <td class="UYBGListBorder UYBGFont_075em" style="word-wrap: break-word;">{{ tile.tileData }}</td>
                <td style="align-content: center;">
                    <ul style="margin-top: 5px;">
                        <li>
                            <a class="UYBGFont_075em" href="{{ path('crud_tiles_show', { 'id': tile.id }) }}">show</a>
                        </li>
                        <li>
                            <a class="UYBGFont_075em" href="{{ path('crud_tiles_edit', { 'id': tile.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul style="margin-top: 5px;">
        <li>
            <a href="{{ path('crud_tiles_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
